---
import { Image } from "astro:assets";
import bestilBillede from "../images/bestil.svg";
import laesBillede from "../images/laes.svg";
---

<section class="Image">
  <div>
    <Image src={bestilBillede} alt="A description of my image" width={300} />
  </div>
  <div>
    <Image
      src={laesBillede}
      alt="Another description of my image"
      width={300}
    />
  </div>
</section>

<style>
  .Image {
    display: grid;
    grid-template-columns: max-content max-content;
    column-gap: 300px;
    justify-content: center;
    align-items: center;
    padding: 50px 0;
    background-color: rgb(247, 240, 230);
  }

  .Image > div {
    width: fit-content;
  }

  @media (max-width: 768px) {
    .Image {
      grid-template-columns: 1fr;
      justify-items: center; /* <-- DENNE centrerer boksene på mobil */
      column-gap: 0; /* <-- vigtig, ellers kan det lave mærkelige ting */
      row-gap: 24px; /* afstand mellem dem lodret */
    }
  }
</style>
