---
import { Image } from "astro:assets";
import img1 from "../images/img_1.jpg";
import img2 from "../images/img_2.jpg";
import img3 from "../images/img_3.jpg";
import img4 from "../images/img_4.jpg";
import img5 from "../images/img_5.jpg";
import img6 from "../images/img_6.jpg";
---

<section class="eventyr-section">
  <h2 class="eventyr-title">Vælg dit eventyr</h2>
  <p class="eventyr-subtitle">
    HØJSKOLENDK er en dansk højskole for unge i alderen 18-28 år.<br />Vi
    brænder for oplevelser, fællesskabet og det gode eventyr.
  </p>
  <div class="eventyr-grid">
    <div class="eventyr-card">
      <span class="badge badge-orange">90 dage</span>
      <Image
        src={img1}
        alt="Maldiverne, Sri Lanka, Bali, Gili Islands, Japan, Australien"
        width={400}
        height={250}
        class="eventyr-img"
      />
      <div class="eventyr-card-overlay"></div>
      <div class="eventyr-card-text">
        <span class="eventyr-card-title"
          >Maldiverne, Sri Lanka, Bali, Gili Islands, Japan, Australien</span
        >
        <span class="eventyr-card-sub">Se afgange</span>
      </div>
    </div>
    <div class="eventyr-card">
      <span class="badge badge-orange">90 dage</span>
      <span class="badge badge-blue">2 drengepladser tilbage</span>
      <Image
        src={img2}
        alt="Brasilien, Colombia, Costa Rica, Mexico"
        width={400}
        height={250}
        class="eventyr-img"
      />
      <div class="eventyr-card-overlay"></div>
      <div class="eventyr-card-text">
        <span class="eventyr-card-title"
          >Brasilien, Colombia, Costa Rica, Mexico</span
        >
      </div>
    </div>
    <div class="eventyr-card">
      <span class="badge badge-orange">90 dage</span>
      <Image
        src={img3}
        alt="Australien, New Zealand, Vietnam, Bali, Gili Islands, Lombok"
        width={400}
        height={250}
        class="eventyr-img"
      />
      <div class="eventyr-card-overlay"></div>
      <div class="eventyr-card-text">
        <span class="eventyr-card-title"
          >Australien, New Zealand, Vietnam, Bali, Gili Islands, Lombok</span
        >
      </div>
    </div>
    <div class="eventyr-card">
      <span class="badge badge-orange">90 dage</span>
      <span class="badge badge-blue">4 pladser tilbage</span>
      <Image
        src={img4}
        alt="Hawaii, Australien, Japan, Bali, Gili"
        width={400}
        height={250}
        class="eventyr-img"
      />
      <div class="eventyr-card-overlay"></div>
      <div class="eventyr-card-text">
        <span class="eventyr-card-title"
          >Hawaii, Australien, Japan, Bali, Gili</span
        >
      </div>
    </div>
    <div class="eventyr-card">
      <span class="badge badge-orange">90 dage</span>
      <Image
        src={img5}
        alt="Japan, Bali, Gili"
        width={400}
        height={250}
        class="eventyr-img"
      />
      <div class="eventyr-card-overlay"></div>
      <div class="eventyr-card-text">
        <span class="eventyr-card-title">Japan, Bali, Gili</span>
      </div>
    </div>
    <div class="eventyr-card">
      <span class="badge badge-orange">90 dage</span>
      <Image
        src={img6}
        alt="Dubai"
        width={400}
        height={250}
        class="eventyr-img"
      />
      <div class="eventyr-card-overlay"></div>
      <div class="eventyr-card-text">
        <span class="eventyr-card-title">Dubai</span>
      </div>
    </div>
  </div>
</section>

<style>
  .eventyr-section {
    text-align: center;
    margin-top: 3rem;
  }
  .eventyr-title {
    font-size: 2.5rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
    color: #222;
    letter-spacing: -2px;
  }
  .eventyr-subtitle {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    color: #444;
    font-weight: 500;
  }
  .eventyr-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    justify-items: center;
  }
  .eventyr-card {
    position: relative;
    background: #fff;
    border-radius: 1.5rem;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    width: 400px;
    min-height: 250px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  .eventyr-img {
    border-radius: 1.5rem;
    width: 100%;
    height: 250px;
    object-fit: cover;
    display: block;
  }
  .eventyr-card-overlay {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0.15) 40%,
      rgba(0, 0, 0, 0.7) 100%
    );
    z-index: 2;
  }
  .eventyr-card-text {
    position: absolute;
    left: 1.5rem;
    bottom: 1.5rem;
    z-index: 3;
    color: #fff;
    font-size: 1.6rem;
    font-weight: 900;
    text-align: left;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.5);
    line-height: 1.1;
  }
  .eventyr-card-title {
    display: block;
    font-size: 1.3rem;
    font-weight: 900;
    margin-bottom: 0.5rem;
  }
  .eventyr-card-sub {
    display: block;
    font-size: 1rem;
    font-weight: 600;
    margin-top: 0.2rem;
  }
  .badge {
    position: absolute;
    top: 1.2rem;
    left: 1.2rem;
    z-index: 4;
    padding: 0.3rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.95rem;
    font-weight: 700;
    color: #fff;
    background: #f47c20;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }
  .badge-blue {
    left: auto;
    right: 1.2rem;
    background: #1da1f2;
  }
  .badge-orange {
    background: #f47c20;
  }
</style>
